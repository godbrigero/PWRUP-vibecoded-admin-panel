{
  "name": "blitz-renderer",
  "version": "0.1.0",
  "description": "Blitz Renderer dashboard",
  "private": true,
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "NODE_OPTIONS='--no-experimental-webstorage' next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "gen:proto": "protoc --plugin=protoc-gen-ts_proto=./node_modules/.bin/protoc-gen-ts_proto --ts_proto_out=src/generated --ts_proto_opt=esModuleInterop=true,forceLong=string,useOptionals=messages,outputServices=generic-definitions -I src/proto src/proto/**/*.proto",
    "electron:icon": "node scripts/generate-electron-icon.mjs",
    "electron:prepare": "npm run build && npm run electron:icon",
    "electron:dev": "concurrently -k \"cross-env NODE_OPTIONS=--no-experimental-webstorage next dev --turbopack --port 3000\" \"wait-on http://127.0.0.1:3000 && cross-env ELECTRON_START_URL=http://127.0.0.1:3000 electron .\"",
    "electron:build:win": "npm run electron:prepare && electron-builder --win --x64 --dir",
    "electron:dist:win": "npm run electron:prepare && electron-builder --win --x64"
  },
  "dependencies": {
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/recharts": "^1.8.29",
    "autobahn-client": "^0.1.0",
    "bonjour-service": "^1.3.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "15.3.3",
    "protobufjs": "^8.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^37.5.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "patch-package": "^8.0.1",
    "pngjs": "^7.0.0",
    "tailwindcss": "^4",
    "to-ico": "^1.1.5",
    "ts-proto": "^2.7.5",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.godbrigero.blitzrenderer",
    "productName": "Blitz Renderer",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "asar": true,
    "files": [
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "public",
        "to": "app/public",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "build/icons/icon.png",
        "to": "icon.png"
      }
    ],
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
